<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maciejbartczak.calculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTop"/>

        <TextView
            android:text=""
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMiddle"
            android:layout_below="@+id/textViewTop"/>

        <TextView
            android:text=""
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBottom"
            android:layout_below="@+id/textViewMiddle"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/firstLinear">

            <Button
                android:text="1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonOne"
                android:layout_marginRight="10dp"
                android:onClick="onClickOne"/>

            <Button
                android:text="2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonTwo"
                android:layout_marginRight="10dp"
                android:onClick="onClickTwo"/>

            <Button
                android:text="3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonThree"
                android:layout_marginRight="10dp"
                android:onClick="onClickThree"/>

            <Button
                android:text="+"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonPlus"
                android:onClick="onClickPlus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/firstLinear"
            android:id="@+id/secondLinear">

            <Button
                android:text="4"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonFour"
                android:layout_marginRight="10dp"
                android:onClick="onClickFour"/>

            <Button
                android:text="5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonFive"
                android:layout_marginRight="10dp"
                android:onClick="onClickFive"/>

            <Button
                android:text="6"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonSix"
                android:layout_marginRight="10dp"
                android:onClick="onClickSix"/>

            <Button
                android:text="-"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonMinus"
                android:onClick="onClickMinus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/secondLinear"
            android:id="@+id/thirdLinear">

            <Button
                android:text="7"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonSeven"
                android:layout_marginRight="10dp"
                android:onClick="onClickSeven"/>

            <Button
                android:text="8"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonEight"
                android:layout_marginRight="10dp"
                android:onClick="onClickEight"/>

            <Button
                android:text="9"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonNine"
                android:layout_marginRight="10dp"
                android:onClick="onClickNine"/>

            <Button
                android:text="*"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonMultiply"
                android:onClick="onClickMultiply"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/thirdLinear"
            android:id="@+id/fourthLinear">

            <Button
                android:text="."
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonDot"
                android:layout_marginRight="10dp"
                android:onClick="onClickDot"/>

            <Button
                android:text="0"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonZero"
                android:layout_marginRight="10dp"
                android:onClick="onClickZero"/>

            <Button
                android:text="C"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonClear"
                android:layout_marginRight="10dp"
                android:onClick="onClickClear"/>

            <Button
                android:text="/"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/buttonDivide"
                android:onClick="onClickDivide"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/fourthLinear">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="20dp"
                android:onClick="onClickEquals"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
